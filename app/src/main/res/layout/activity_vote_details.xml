<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sxdtdx.aitou.view.activity.VoteDetailsActivity">

    <include layout="@layout/view_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_vote_details_title"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:singleLine="true"
                android:id="@+id/tv_vote_details_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_vote_details_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/iv_vote_details_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/bg_default"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_vote_details_voted_count"
                android:layout_marginTop="10dp"/>

            <com.sxdtdx.aitou.view.SuperListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slv_vote_details_options"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_vote"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:text="@string/action_vote"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
